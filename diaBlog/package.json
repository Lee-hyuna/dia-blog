{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.6.0"
  },
  "scripts": {
    "start": "npm run serve & npm run watch & npm run refresh",
    "serve": "hexo serve -p 4444",
    "watch": "hexo generate --watch",
    "refresh": "browser-sync start --proxy http://localhost:4444 --files public --reload-debounce 500ms",
    "deploy": "hexo deploy --generate"
  },
  "dependencies": {
    "browser-sync": "^2.18.13",
    "hexo": "^3.2.0",
    "hexo-deployer-git": "^0.3.1",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.0",
    "hexo-renderer-marked": "^0.3.0",
    "hexo-renderer-stylus": "^0.3.1",
    "hexo-server": "^0.2.0"
  }
}